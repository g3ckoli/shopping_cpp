{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build shopping_cart",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${workspaceFolder}/shopping.cpp",
        "-o",
        "${workspaceFolder}/shopping.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build manage_products",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${workspaceFolder}/manage_products.cpp",
        "-o",
        "${workspaceFolder}/manage_products.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build all",
      "dependsOn": [
        "build shopping_cart",
        "build manage_products"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
